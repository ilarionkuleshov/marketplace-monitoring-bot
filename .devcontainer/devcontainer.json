{
    "name": "Marketplace Monitoring Bot",
    "build": {
        "context": "..",
        "dockerfile": "../Dockerfile",
        "args": {
            "USERNAME": "vscode",
            "WORKING_DIR": "${containerWorkspaceFolder}",
            "POETRY_INSTALL_DEV": "True"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "containerEnv": {
        "SHELL": "/bin/bash"
    },
    "remoteUser": "vscode",
    "runArgs": [
        "--network=host"
    ]
}